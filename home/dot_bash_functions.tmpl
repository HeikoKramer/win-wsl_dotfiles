{{- $data := (include "common/shortcuts.yml" | fromYaml) -}}

# --- DO NOT EDIT THIS FILE DIRECTLY ---
# This file is generated by chezmoi from common/shortcuts.yml.
# Edit the YAML in common/shortcuts.yml instead.

# Helper: list shortcuts, optionally filter by category (usage: shortcuts or shortcuts DIRS)
shortcuts() {
  local filter="$1"
  printf "%-12s %-10s %-s\n" "name" "cat" "desc"
  {{- range $data }}
  {{- if or (hasKey .cmd "linux") (hasKey .cmd "both") }}
  if [ -z "$filter" ] || [ "$filter" = "{{ .cat }}" ]; then
    printf "%-12s %-10s %-s\n" "{{ .name }}" "{{ .cat }}" "{{ .desc }}"
  fi
  {{- end }}
  {{- end }}
}

# Render one function per shortcut (Linux command preferred, else 'both')
{{- range $data }}
{{- if hasKey .cmd "linux" }}
{{ .name }}() { {{ index .cmd "linux" }}; }
{{- else if hasKey .cmd "both" }}
{{ .name }}() { {{ index .cmd "both" }}; }
{{- end }}
{{- end }}
